<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_gmOne_select_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout style="@style/ll_gm_text_bar">

        <ImageView
            android:id="@+id/iv_gmOne_a"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30" />

        <TextView
            android:id="@+id/tv_gmOne_a_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:textSize="@dimen/space_16" />
    </LinearLayout>

    <LinearLayout style="@style/ll_gm_text_bar">

        <ImageView
            android:id="@+id/iv_gmOne_b"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30" />

        <TextView
            android:id="@+id/iv_gmOne_b_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:textSize="@dimen/space_16" />
    </LinearLayout>

    <LinearLayout style="@style/ll_gm_text_bar">

        <ImageView
            android:id="@+id/iv_gmOne_c"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30" />

        <TextView
            android:id="@+id/iv_gmOne_c_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:textSize="@dimen/space_16" />
    </LinearLayout>

    <LinearLayout style="@style/ll_gm_text_bar">

        <ImageView
            android:id="@+id/iv_gmOne_d"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30" />

        <TextView
            android:id="@+id/iv_gmOne_d_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:textSize="@dimen/space_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gmOne_e"
        style="@style/ll_gm_text_bar"
        android:layout_marginBottom="@dimen/space_8">

        <ImageView
            android:id="@+id/iv_gmOne_e"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30" />

        <TextView
            android:id="@+id/iv_gmOne_e_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            android:textSize="@dimen/space_16" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_gmone_suer_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:textColor="@color/text_fu_color"
        android:background="@drawable/bg_gm_text_sure_n"
        android:text="@string/sure_answer" />

    <LinearLayout
        android:id="@+id/ll_gmone_answer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/v_gmOne_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_10"
            android:background="@color/gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_8"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gmOne_answer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer_2"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_gmOne_answer_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>